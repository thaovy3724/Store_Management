@{
    Layout = null;
}

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/img/favicon.jpg" type="image/x-icon">
    <title>Đăng Nhập</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcodejs/qrcode.min.js"></script>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">

</head>

<body class="body-login">
    <div id="loadingOverlay" class="loading-overlay d-none">
        <div class="spinner-border text-light" role="status" style="width: 3rem; height: 3rem;">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
    <div class="login-card">
        <div class="brand">
            <div>
                <img style="height: 70px;" src="~/img/logo.jpg" alt="">
            </div>
            @* <h4>FOMO Store</h4> *@
        </div>

        <form id="loginForm">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Tên đăng nhập</label>
                <input type="text" class="form-control" name="username" placeholder="Nhập tên đăng nhập">
                <div class="text-danger small error-username"></div>
            </div>

            <div class="mb-3 position-relative">
                <label class="form-label">Mật khẩu</label>
                <div class="input-group">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Nhập mật khẩu">
                </div>
                <div class="text-danger small error-password"></div>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2">Đăng nhập</button>
        </form>
    </div>
    <script src="~/js/Toast.js"></script>
    <script src="~/js/Login.js"></script>
</body>
</html>

