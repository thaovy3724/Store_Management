@using Microsoft.AspNetCore.Mvc.Rendering
@{
    string currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
}
@inject IHttpContextAccessor HttpContextAccessor

<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - StoreManagement</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/Admin.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcodejs/qrcode.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/Toast.js"></script>
</head>
<body>
    <!-- Topbar -->
    <div class="topbar">
        <div class="brand">Admin Panel</div>
        <div class="d-flex align-items-center">
            <span class="user-info me-2">
                Xin chào,
                <a href="#" class="fw-bold text-decoration-none" style="color:#0d6efd">
                    @(HttpContextAccessor.HttpContext.Session.GetString("Username") ?? "Khách")
                </a>
            </span>
            <span class="text-muted mx-2">|</span>
            <button id="btnLogout" class="btn btn-link btn-sm p-0 text-decoration-none" style="color:#0d6efd">Đăng xuất</button>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="sidebar d-flex flex-column pt-3">
        <nav class="nav flex-column mt-2">
            <a class="nav-link" asp-controller="Account" asp-action="Index"><i class="bi bi-people-fill text-primary"></i> Quản lý tài khoản</a>
            <a class="nav-link" asp-controller="Customer" asp-action="Index"><i class="bi bi-person-lines-fill text-primary"></i> Quản lý khách hàng</a>
            <a class="nav-link @(currentController == "Product" ? "active" : "")" asp-controller="Product" asp-action="Index">
                <i class="bi bi-box-seam text-primary"></i> Quản lý sản phẩm
            </a>
            <a class="nav-link" asp-controller="Category" asp-action="Index"><i class="bi bi-tags-fill text-primary"></i> Quản lý loại sản phẩm</a>
            <a class="nav-link" asp-controller="Supplier" asp-action="Index"><i class="bi bi-truck text-primary"></i> Quản lý nhà cung cấp</a>
            <a class="nav-link" asp-controller="Promotion" asp-action="Index"><i class="bi bi-gift-fill text-primary"></i> Quản lý khuyến mãi</a>
            <a class="nav-link @(currentController == "Orders" ? "active" : "")" asp-controller="Orders" asp-action="Index">
                <i class="bi bi-receipt-cutoff text-primary"></i> Quản lý đơn hàng
            </a>
            <a class="nav-link" asp-controller="Statistic" asp-action="Index"><i class="bi bi-bar-chart-line-fill text-primary"></i> Thống kê</a>
        </nav>
    </div>

    <!-- Main content -->
    <div class="content">
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
    </div>

    <!-- Modal -->
    @RenderSection("Modals", required: false)
    <!-- Script -->
    @RenderSection("Scripts", required: false)
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const btnLogout = document.getElementById("btnLogout");
            if (btnLogout) {
                btnLogout.addEventListener("click", async () => {
                    const confirm = await Swal.fire({
                        title: "Xác nhận đăng xuất?",
                        text: "Bạn có chắc chắn muốn đăng xuất khỏi hệ thống?",
                        icon: "question",
                        showCancelButton: true,
                        confirmButtonText: "Đăng xuất",
                        cancelButtonText: "Hủy",
                    });

                    if (confirm.isConfirmed) {
                        window.location.href = "/Auth/Logout";
                    }
                });
            }
        });
    </script>
    
</body>
</html>
