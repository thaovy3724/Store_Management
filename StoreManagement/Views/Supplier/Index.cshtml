<!-- Nội dung chính -->
    <div class="container-fluid p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="fw-bold">Quản lý Nhà cung cấp</h3>   
        </div>
        <!-- Thanh lọc -->
        <div class="d-flex justify-content-between align-items-start mb-3 flex-wrap gap-2">
            <!-- Thanh lọc bên trái -->
            <div class="d-flex flex-wrap gap-2 align-items-center flex-grow-1">
                <!-- Ô tìm kiếm -->
                <div class="input-group input-group-sm" style="width: 300px;">
                    <input type="text" class="form-control" id="search" name="search" placeholder="Nhập tên, email, số điện thoại">
                    <button class="btn btn-primary btn-search" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>

            <!-- Nút Thêm mới bên phải -->
            <button class="btn btn-primary btn-sm btn-add" data-bs-toggle="modal" data-bs-target="#supplierModal">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </button>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered align-middle">
                        <thead class="table-light thead-separator ">
                        <tr class="text-center">
                            <th style="width:100px;">ID</th>
                            <th>Tên</th>
                            <th>Số điện thoại</th>
                            <th>Email</th>
                            <th style="width:150px;">Hành động</th>
                        </tr>
                        </thead>
                        <tbody id="tableBody">
                        <tr>
                            <td colspan="5" class="text-center">Đang lấy dữ liệu...</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <!-- Phân trang-->
                <nav class="mt-3">
                    <ul class="pagination justify-content-center modern-pagination-light">
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Previous">&laquo;</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#" aria-label="Next">&raquo;</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>


<!-- Modal dùng chung -->
<div class="modal fade" id="supplierModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      
      <!-- Header -->
      <div class="modal-header">
        <h5 class="modal-title" id="supplierModalTitle">Quản lý NCC</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
      <!-- Body -->
      <div class="modal-body">
          <form id="supplierForm">
              @Html.AntiForgeryToken()
              <input type="hidden" name="supplierId" id="supplierId" value="0">
              <div class="mb-3">
                  <label class="form-label">Tên nhà cung cấp</label>
                  <input type="text" class="form-control" name="fullname" id="fullname">
                  <small id="fullname-msg" class="form-text text-danger text-msg"></small>
              </div>
              <div class="mb-3">
                  <label class="form-label">Số điện thoại</label>
                  <input type="text" class="form-control" name="phonenumber" id="phonenumber">
                  <small id="phonenumber-msg" class="form-text text-danger text-msg"></small>
              </div>
              <div class="mb-3">
                  <label class="form-label">Email</label>
                  <input type="email" class="form-control" name="supplieremail" id="supplieremail">
                  <small id="supplieremail-msg" class="form-text text-danger text-msg"></small>
              </div>
              <div class="mb-3">
                  <label class="form-label">Địa chỉ</label>
                  <textarea class="form-control" name="address" id="address" rows="3"></textarea>
                  <small id="address-msg" class="form-text text-danger text-msg"></small>
              </div>
          </form>
      </div>
      
      <!-- Footer -->
      <div class="modal-footer">
        <button type="submit" form="supplierForm" id="supplierModalSaveBtn" class="btn btn-primary">Lưu</button>
      </div>
    </div>
  </div>
</div>

@section Scripts
{
    <script src="~/js/Supplier.js"></script>
}
