@{
    ViewData["Title"] = "Thống kê";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcodejs/qrcode.min.js"></script>
    <link rel="stylesheet" href="../css/statistic.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>

<div class="row g-4">
    <!-- Doanh thu -->
    <div class="col-xl-3 col-md-6">
        <div class="card stats-card card-hover-primary shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-muted text-uppercase fw-bold small">Doanh thu</div>
                        <div class="stat-value text-primary">@String.Format("{0:N0} đ", ViewBag.Revenue)</div>
                        <div class="stat-change @(ViewBag.RevenueChange >= 0 ? "text-success" : "text-danger")">
                            <i class="fas @(ViewBag.RevenueChange >= 0 ? "fa-arrow-up" : "fa-arrow-down") trend-icon"></i>
                            <span>@ViewBag.RevenueChange% so với tuần trước</span>
                        </div>
                    </div>
                    <div class="icon-circle">
                        <i class="fas fa-dollar-sign text-primary"></i>
                    </div>
                </div>
                <div class="progress mt-4"
                        data-bs-toggle="tooltip"
                        data-bs-placement="top"
                        title="Đạt @String.Format("{0:N0}", ViewBag.Revenue) / @ViewBag.RevenueTarget ₫ (@ViewBag.RevenueProgress%)">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: @ViewBag.RevenueProgress%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Khách hàng mới -->
    <div class="col-xl-3 col-md-6">
        <div class="card stats-card card-hover-success shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-muted text-uppercase fw-bold small">Khách hàng mới</div>
                        <div class="stat-value text-success">@ViewBag.NewCustomers</div>
                        <div class="stat-change @(ViewBag.CustomerChange >= 0 ? "text-success" : "text-danger")">
                            <i class="fas @(ViewBag.CustomerChange >= 0 ? "fa-arrow-up" : "fa-arrow-down") trend-icon"></i>
                            <span>@ViewBag.CustomerChange% so với tuần trước</span>
                        </div>
                    </div>
                    <div class="icon-circle">
                        <i class="fas fa-users text-success"></i>
                    </div>
                </div>
                <div class="progress mt-4"
                        data-bs-toggle="tooltip"
                        title="Đạt @ViewBag.NewCustomers / @ViewBag.CustomerTarget khách hàng (@ViewBag.CustomerProgress%)">
                    <div class="progress-bar bg-success" role="progressbar" style="width: @ViewBag.CustomerProgress%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Đơn hàng -->
    <div class="col-xl-3 col-md-6">
        <div class="card stats-card card-hover-info shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-muted text-uppercase fw-bold small">Đơn hàng</div>
                        <div class="stat-value text-info">@ViewBag.OrderCount</div>
                        <div class="stat-change @(ViewBag.OrderChange >= 0 ? "text-success" : "text-danger")">
                            <i class="fas @(ViewBag.OrderChange >= 0 ? "fa-arrow-up" : "fa-arrow-down") trend-icon"></i>
                            <span>@ViewBag.OrderChange% so với tuần trước</span>
                        </div>
                    </div>
                    <div class="icon-circle">
                        <i class="fas fa-tasks text-info"></i>
                    </div>
                </div>
                <div class="progress mt-4"
                        data-bs-toggle="tooltip"
                        title="Đạt @ViewBag.OrderCount / @ViewBag.OrderTarget đơn hàng (@ViewBag.OrderProgress%)">
                    <div class="progress-bar bg-info" role="progressbar" style="width: @ViewBag.OrderProgress%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sản phẩm bán được -->
    <div class="col-xl-3 col-md-6">
        <div class="card stats-card card-hover-warning shadow-sm">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <div class="text-muted text-uppercase fw-bold small">Sản phẩm bán được</div>
                        <div class="stat-value text-warning">@ViewBag.SoldProducts</div>
                        <div class="stat-change @(ViewBag.SoldChange >= 0 ? "text-success" : "text-danger")">
                            <i class="fas @(ViewBag.SoldChange >= 0 ? "fa-arrow-up" : "fa-arrow-down") trend-icon"></i>
                            <span>@ViewBag.SoldChange% so với tuần trước</span>
                        </div>
                    </div>
                    <div class="icon-circle">
                        <i class="fas fa-chart-pie text-warning"></i>
                    </div>
                </div>
                <div class="progress mt-4"
                        data-bs-toggle="tooltip"
                        title="Đạt @ViewBag.SoldProducts / @ViewBag.SoldTarget sản phẩm (@ViewBag.SoldProgress%)">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: @ViewBag.SoldProgress%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <!-- Biểu đồ Doanh thu -->
    <div class="col-md-8 bg-white border rounded-3 shadow-sm p-3">
        <!-- Bộ lọc -->
        <div class="filter-bar bg-light rounded-2 px-3 py-2 mb-3 d-flex flex-wrap align-items-center justify-content-between">
            <!-- Cột chọn năm -->
            <div class="d-flex align-items-center gap-2 mb-2 mb-md-0">
                <label for="yearSelect" class="form-label mb-0 fw-semibold text-secondary">Năm:</label>
                    <select id="yearSelect" class="form-select form-select-sm w-auto">
                        <option value="">-- Chọn năm --</option>
                        @foreach (var year in ViewBag.Years as List<int>)
                        {
                            if (year == ViewBag.CurrentYear)
                            {
                                <option value="@year" selected>@year</option>
                            }
                            else
                            {
                                <option value="@year">@year</option>
                            }
                        }
                    </select>
            </div>

            <!-- Cột chọn khoảng ngày -->
            <div class="d-flex align-items-center gap-2 flex-wrap justify-content-end">
                <label class="form-label mb-0 fw-semibold text-secondary">Từ:</label>
                <input type="date" id="startDate" class="form-control form-control-sm" style="width: 160px;">
                <label class="form-label mb-0 fw-semibold text-secondary">Đến:</label>
                <input type="date" id="endDate" class="form-control form-control-sm" style="width: 160px;">
                <button id="filterBtn" class="btn btn-sm btn-success ms-2 px-3">
                    <i class="bi bi-funnel-fill"></i> Lọc
                </button>
            </div>
        </div>

        <!-- Biểu đồ -->
        <div class="chart-container" style="position: relative; height: 420px;">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>
    <div class="col-md-4 border rounded-3 p-3 bg-white">
    <!-- Biểu đồ thống kê TOP -->
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-start align-items-center mb-2 w-100">
                    <label for="startDatePie" class="me-2 d-flex justify-content-center align-items-center">
                        Ngày:
                    </label>
                    <input type="date" id="startDatePie" style="max-width: 170px;" class="form-control me-2">
                    <span class="fs-3 me-2">-</span>
                    <input type="date" id="endDatePie" style="max-width: 170px;" class="form-control me-2">
                </div>
            </div>
            <div class="col-md-12">
                <div class="input-group rounded-3">
                    <!-- Nút "Top" -->
                    <span class="input-group-text">Top</span>

                    <!-- Input nhập số -->
                    <input type="number" id="topLimit" class="form-control" style="max-width: 60px;" min="1" max="10">

                    <!-- Select menu -->
                    <select class="form-select" id="topType" style="max-width: 306px;">
                        <option selected value="1">Sản phẩm bán chạy nhất</option>
                        <option value="2">Sản phẩm ít bán chạy nhất</option>
                        <option value="3">Khách hàng chi tiêu nhiều nhất</option>
                        <option value="4">Khách hàng chi tiêu ít nhất</option>
                    </select>
                </div>
            </div>
            <div>
                <canvas id="myChartTop"></canvas>
            </div>
        </div>
    </div>
</div>
</body>
</html>
@section Scripts {
    <script src="../js/Toast.js"></script>
    <script src="../js/Statistic.js"></script>
}


