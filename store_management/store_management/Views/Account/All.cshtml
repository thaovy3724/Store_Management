@model List<store_management.Models.Entities.Account>

@{
    ViewData["Title"] = "Danh sách tài khoản";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Danh sách tài khoản</h2>
    <a asp-controller="Account" asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-lg"></i> Thêm Tài khoản Mới
    </a>

    <!-- 🔴 Nút đăng xuất -->
    <a asp-controller="Account" asp-action="Logout" class="btn btn-outline-danger">
        <i class="fa-solid fa-right-from-bracket"></i> Đăng xuất
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Vai trò</th>
            <th>Ngày tạo</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model)
        {
            <tr>
                <td>@acc.accountId</td>
                <td>@acc.username</td>
                <td>@acc.email</td>
                <td>@acc.role</td>
                <td>@acc.createdAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@acc.accountId" class="btn btn-sm btn-warning">Sửa</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="accountId" value="@acc.accountId" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Bạn có chắc muốn xóa tài khoản này không?');">
                            Xóa
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
